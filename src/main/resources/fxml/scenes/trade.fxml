<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<GridPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx" fx:controller="controller.Trade"
          fx:id="contentPane"
          prefHeight="400.0" prefWidth="600.0"
          vgap="4"
          hgap="4">

    <padding>
        <Insets topRightBottomLeft="5"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="25.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>

    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <children>

        <GridPane GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.rowSpan="3" GridPane.columnSpan="6"
                  style="-fx-background-color: #9e9e9e"
                  vgap="2"
                  hgap="2"
        >
            <padding>
            <Insets topRightBottomLeft="6"/>
            </padding>

            <TextField fx:id="baseCoin" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="relCoin" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="getOrderbookBtn" GridPane.columnIndex="2" GridPane.rowIndex="1" onAction="#getOrderbook"
                    mnemonicParsing="false" text="Get orders"/>
        </GridPane>


        <GridPane GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.rowSpan="2" GridPane.columnSpan="6"
                  style="-fx-background-color: #326464"
                  vgap="2"
                  hgap="2"
        >
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>

            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="250.0" vgrow="ALWAYS"/>
            </rowConstraints>

            <Label text="Orderbook CHIPS/KMD" GridPane.rowIndex="0" GridPane.columnIndex="0" textFill="#faaa00"
                   style="-fx-font-size: 16">

                    <padding>
                        <Insets left="5"/>
                    </padding>
            </Label>

            <TableView fx:id="orderbookBids" GridPane.columnIndex="0" GridPane.rowIndex="1">
                 <!--GridPane.vgrow="ALWAYS" >-->
                <!--Vgrow always to let the table 'fill' the whole gridpane surface-->

                <columns>
                    <TableColumn fx:id="avgbidvolume" text="Avg volume" sortable="false">
                        <cellValueFactory>
                            <PropertyValueFactory property="avevolume"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Max volume" sortable="false">
                        <cellValueFactory>
                            <PropertyValueFactory property="maxvolume"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Price" sortable="false">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
            <TableView fx:id="orderbookAsks" prefHeight="200.0" prefWidth="116.0"
                       GridPane.columnIndex="1" GridPane.rowIndex="1">
                <!--GridPane.rowIndex="6" GridPane.columnSpan="2" GridPane.rowSpan="2">-->
                <columns>
                    <TableColumn text="Price" sortable="false">
                        <cellValueFactory>
                            <PropertyValueFactory property="price"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Max volume" sortable="false">
                        <cellValueFactory>
                            <PropertyValueFactory property="maxvolume"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="avgaskvolume" text="Avg volume" sortable="false">
                        <cellValueFactory>
                            <PropertyValueFactory property="avevolume"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>

        </GridPane>

        <GridPane GridPane.rowIndex="3" GridPane.columnIndex="6" GridPane.rowSpan="3" GridPane.columnSpan="3"
                  style="-fx-background-color: #9e9e9e"
                  vgap="2"
                  hgap="2"
        >
            <!--<padding>-->
                <!--<Insets topRightBottomLeft="6"/>-->
            <!--</padding>-->
            <!--Buy-->
            <Label text="Buy" GridPane.rowIndex="3" GridPane.columnIndex="4" textFill="#faaa00"
                   style="-fx-font-size: 24" GridPane.valignment="BASELINE"/>

            <Label text="Amount of base" GridPane.rowIndex="4" GridPane.columnIndex="4" textFill="white"
                   GridPane.valignment="BASELINE"/>
            <TextField GridPane.rowIndex="4" GridPane.columnIndex="5" GridPane.valignment="BASELINE"
                       fx:id="buyAmount" maxWidth="120" minWidth="120" promptText="0.00"
            />

            <Label text="Price in rel" GridPane.rowIndex="5" GridPane.columnIndex="4" textFill="white"
                   GridPane.valignment="BASELINE"/>
            <TextField
                    GridPane.rowIndex="5" GridPane.columnIndex="5" GridPane.valignment="BASELINE"
                    fx:id="buyPrice" maxWidth="120" minWidth="120" promptText="0.00"
            />

            <Button
                    GridPane.columnIndex="5" GridPane.rowIndex="7" GridPane.valignment="BASELINE"
                    text="Buy"
                    onAction="#buyBtn"
            />

            <Label text="Total base" GridPane.rowIndex="6" GridPane.columnIndex="4" textFill="white"
                   GridPane.valignment="BASELINE"/>
            <Label fx:id="buyTotal" GridPane.rowIndex="6" GridPane.columnIndex="5" textFill="white"
                   GridPane.valignment="BASELINE"/>


            <!--Sell-->
            <Label text="Sell" GridPane.rowIndex="3" GridPane.columnIndex="7" textFill="#faaa00"
                   style="-fx-font-size: 24" GridPane.valignment="BASELINE"/>

            <Label text="Amount of base" GridPane.rowIndex="4" GridPane.columnIndex="7" textFill="white"
                   GridPane.valignment="BASELINE"/>
            <TextField GridPane.rowIndex="4" GridPane.columnIndex="8" GridPane.valignment="BASELINE"
                       maxWidth="120" minWidth="120" promptText="0.00"
            />

            <Label text="Price in rel" GridPane.rowIndex="5" GridPane.columnIndex="7" textFill="white"
                   GridPane.valignment="BASELINE"/>
            <TextField GridPane.rowIndex="5" GridPane.columnIndex="8" GridPane.valignment="BASELINE"
                       maxWidth="120" minWidth="120" promptText="0.00"
            />
        </GridPane>
        <GridPane GridPane.rowIndex="6" GridPane.columnIndex="6" GridPane.rowSpan="2" GridPane.columnSpan="3"
                  style="-fx-background-color: #9e9e9e"
                  vgap="2"
                  hgap="2"
        >
        </GridPane>
    </children>
</GridPane>
