<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          vgap="4"
          hgap="4">

    <padding>
        <Insets topRightBottomLeft="5"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="120.0" maxWidth="120.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="120.0" maxWidth="120.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>

    <GridPane GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.rowSpan="3" GridPane.columnSpan="2"
              style="-fx-background-color: #9e9e9e"
              vgap="2"
              hgap="2"
    >
        <padding>
            <Insets topRightBottomLeft="6"/>
        </padding>

        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>


        <ComboBox minWidth="230">
            <items>
                <FXCollections fx:factory="observableArrayList" fx:id="comboBox">
                    <String fx:value="CHIPS"/>
                    <String fx:value="BCH"/>
                    <String fx:value="HUSH"/>
                </FXCollections>
            </items>
        </ComboBox>

        <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <RadioButton  fx:id="radioElectrum" selected="true" text="Electrum">
                <padding>
                    <Insets top="3" right="4"/>
                </padding>
                <toggleGroup>
                    <ToggleGroup fx:id="toggleGroup"/>
                </toggleGroup>
            </RadioButton>
            <RadioButton toggleGroup="$toggleGroup" fx:id="radioNative" text="Native">
                <padding>
                    <Insets top="3" left="4" right="1"/>
                </padding>
            </RadioButton>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Enable"/>

        </HBox>


    </GridPane>

</GridPane>
