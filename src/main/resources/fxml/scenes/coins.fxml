<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import javafx.scene.image.ImageView?>
<GridPane hgap="4" style="-fx-background-color: #919191" vgap="4" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121"
          fx:controller="controller.Coins">

    <padding>
        <Insets topRightBottomLeft="4" />
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0" />
        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
        <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
        <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
        <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
        <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
        <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
        <!--<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />-->
    </rowConstraints>

    <GridPane hgap="2" style="-fx-background-color: #9e9e9e" vgap="2" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <padding>
            <Insets topRightBottomLeft="6" />
        </padding>

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>


        <ComboBox minWidth="230" fx:id="comboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="CHIPS" />
                    <String fx:value="BCH" />
                    <String fx:value="HUSH" />
                </FXCollections>
            </items>
        </ComboBox>

        <HBox GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
            <RadioButton fx:id="radioElectrum" selected="true" text="Electrum">
                <padding>
                    <Insets right="4" top="3" />
                </padding>
                <toggleGroup>
                    <ToggleGroup fx:id="toggleGroup" />
                </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="radioNative" text="Native" toggleGroup="$toggleGroup">
                <padding>
                    <Insets left="4" right="1" top="3" />
                </padding>
            </RadioButton>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Enable" onAction="#enableCoin">
                <HBox.margin>
                <Insets right="2.0" />
            </HBox.margin></Button>

        </HBox>

        <ListView fx:id="activeCoinsListView" GridPane.rowIndex="2">
            <placeholder>
                <Label text="No active coins" />
            </placeholder>
        </ListView>

        <Button GridPane.rowIndex="3" text="Disable" GridPane.halignment="RIGHT" fx:id="disableCoin" onAction="#disableCoin"/>

        <ImageView fx:id="qrcodeview" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS">
        </ImageView>

    </GridPane>

    <GridPane hgap="2" style="-fx-background-color: #9e9e9e" vgap="2" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowIndex="0">
        <padding>
            <Insets topRightBottomLeft="6" />
        </padding>

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>

    </GridPane>

</GridPane>
